<div class="row">
  <div class="col-md-7 well post-show">
    <ul>
      <li><h3> <%= @post.title %> <span class="author-show">By <%= @post.author %></span></h3></li>
      <li class="post-body"><%= markdown(@post.body).html_safe %></li>
      <li id="edit-post" type="button" class="btn btn-fresh btn-sm"><%= link_to 'Edit', edit_post_path(@post), class: 'color-links' %></li>
      <li id="delete-post" type="button" class="btn btn-sunny btn-sm"><%= link_to 'Delete', post_path(@post), method: 'delete', class: 'color-links' %></li>
      <li id="mark-draft" type="button" class="btn btn-sky btn-sm"><%= link_to 'Mark as Draft', draft_path(@post), method: 'delete', class: 'color-links' %></li>
    </ul>
</div>
  <div class="col-md-4 well comment-create">
    <%= bootstrap_form_for [@post, @comment] do |f| %>
      <%= f.text_area :body %>
      <%= f.text_field :author_name %>
      <%= f.submit "Add Comment" %>
    <% end %>

    <% @comments.each do |comment| %>
      <div class="well comment-index">
        <h3><%= markdown(comment.body).html_safe %></h3>
        <h5><%= markdown(comment.author_name).html_safe %> <%= comment.updated_at %></h5>
        <div id="delete-comment" type="button" class="btn btn-sunny btn-xs text-uppercase"><%= link_to 'Delete Comment', post_comment_path(@post, comment), method: 'delete', class: 'color-links' %></div>
        <div id="delete" type="button" class="btn btn-sky btn-xs text-uppercase"><%= link_to 'Edit Comment', edit_post_comment_path(@post, comment), class: 'color-links' %></div>
      </div>
    <% end %>
  </div>
</div>
