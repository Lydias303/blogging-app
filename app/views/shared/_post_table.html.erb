<table id="post-table" class="table table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Body</th>
      <th>Number of Comments</th>
      <th>Tags</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td class="title"><%= link_to post.title, post_path(post) %></td>
        <td class="post-body"><%= markdown(post.body).html_safe %></td>
        <td class="author"><%= post.author %></td>
        <td><%= post.comments.count %></td>
        <td><%= post.print_tags %></td>
      </tr>
    <% end %>
  </tbody>
</table>
